{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "htmlacademy/es5",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
      /*
       * *** Отключение некоторых правил, предустановленных
       * *** в конфигурации от «HTML Academy»
       */

      // --- Отключение необходимости НЕ-ставить пробел после/перед { ... } при import ---
      "object-curly-spacing": "off",

      // --- Отключение обязательного написания кода в нотации "camelCase" ---
      "camelcase": "off"
    }
}
